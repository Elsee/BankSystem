<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" stylesheets="@bootstrap.css" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="login.LoginController">
    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>
   <children>
       <Text styleClass="h1" text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
         <GridPane.margin>
            <Insets bottom="15.0" />
         </GridPane.margin>
      </Text>
   
       <Label text="Login:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
   
       <TextField minWidth="250.0" styleClass="form-control" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
       <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
   
       <PasswordField fx:id="passwordField" styleClass="form-control" GridPane.columnIndex="1" GridPane.rowIndex="2" />
       <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
          <children>
              <Button onAction="#handleSubmitButtonAction" text="Sign In">
               <styleClass>
                  <String fx:value="btn" />
                  <String fx:value="btn-primary" />
               </styleClass>
            </Button>
          </children>
       </HBox>
   
       <Text fx:id="actiontarget" GridPane.columnIndex="1" GridPane.rowIndex="6" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
