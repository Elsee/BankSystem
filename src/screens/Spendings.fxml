               <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#mainScreen" prefHeight="59.0" prefWidth="70.0" styleClass="nav-item" text="Main" />
               <Button mnemonicParsing="false" onAction="#transactionForm" prefHeight="59.0" prefWidth="248.0" styleClass="nav-item" text="Payments and transactions" />
               <MenuButton mnemonicParsing="false" prefHeight="57.0" prefWidth="141.0" styleClass="nav-item" text="Personal">
